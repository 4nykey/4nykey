opts="${opts}"

depend() {
	need net
}

start() {
	ebegin "Starting xmms2"
	start-stop-daemon --start -q -b -c ${XMMS2_USER} --exec /usr/bin/xmms2d -- -q
	eend
}

stop() {
	ebegin "Stopping xmms2"
	start-stop-daemon --start -q -c ${XMMS2_USER} --exec /usr/bin/xmms2 -- quit
	eend $?
}

